
ENV?=dev
BRANCH_NAME?=main
PROJECT_NAME=MovieMaker

synth:
	ENV=$(ENV) PROJECT_NAME=$(PROJECT_NAME) BRANCH_NAME=$(BRANCH_NAME) cdk synth

deploy:
	DOCKER_DEFAULT_PLATFORM=linux/amd64 ENV=$(ENV) PROJECT_NAME=$(PROJECT_NAME) BRANCH_NAME=$(BRANCH_NAME) cdk deploy

destroy:
	ENV=$(ENV) PROJECT_NAME=$(PROJECT_NAME) BRANCH_NAME=$(BRANCH_NAME) cdk destroy